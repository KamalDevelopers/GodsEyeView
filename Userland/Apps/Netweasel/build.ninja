rule move
    pool = console
    command = mv ./netweasel ../../../Base/root/bin/ && ninja -t clean

rule cpp
    command = i686-elf-g++ -fPIC -T link.ld -o netweasel $in ../../../Libraries/libc.a -fno-builtin -fno-use-cxa-atexit -fno-rtti -fno-exceptions -fno-leading-underscore -nostdlib -ffreestanding -O2 -I../../../Libraries -lgcc

build ./netweasel main.o: cpp ./main.cpp
build move: move
default ./netweasel
