rule move
    pool = console
    command = mv ./brainfuck ../../../Base/root/ && ninja -t clean

rule cpp
    command = i686-elf-g++ -T link.ld -o brainfuck $in ../../../Libraries/libc.a -fno-builtin -fno-use-cxa-atexit -fno-rtti -fno-exceptions -fno-leading-underscore -nostdlib -ffreestanding -O2 -I../../../Libraries -lgcc

build ./brainfuck main.o: cpp ./main.cpp
build move: move
default ./brainfuck
