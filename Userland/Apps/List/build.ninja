rule move
    pool = console
    command = mv ./ls ../../../Base/root/ && ninja -t clean

rule cpp
    command = i686-elf-g++ -fPIC -T link.ld -o ls $in ../../../Libraries/libc.a -fno-builtin -fno-use-cxa-atexit -fno-rtti -fno-exceptions -fno-leading-underscore -nostdlib -ffreestanding -O2 -I../../../Libraries -lgcc

build ./ls main.o: cpp ./main.cpp
build move: move
default ./ls
